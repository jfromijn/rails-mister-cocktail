<h1>Add a new dose to <%= @cocktail.name %></h1>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <div class="form-inputs">

    <%= f.input :description %>
    <%= f.association :ingredient, label_method: :name, value_method: :id, include_blank: false  %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
